root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Preserve intentional trailing spaces (used for line breaks in some renderers)
trim_trailing_whitespace = false

[*.{gradle,java,kt}]
indent_size = 4

[Makefile]
indent_style = tab
